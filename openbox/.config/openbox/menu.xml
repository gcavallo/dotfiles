<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <separator label="Applications" />
  <item label="Terminal Emulator">
    <action name="Execute"><execute>sakura</execute></action>
  </item>
  <item label="File Manager">
    <action name="Execute"><execute>dolphin</execute></action>
  </item>
  <menu id="web" label="Web Browsers">
    <item label="Chromium">
      <action name="Execute"><execute>chromium</execute></action>
    </item>
    <item label="Firefox (Private)">
      <action name="Execute"><execute>firefox --private-window localhost</execute></action>
    </item>
  </menu>
  <item label="Email Client">
    <action name="Execute"><execute>thunderbird</execute></action>
  </item>
  <item label="Instant Messenger">
    <action name="Execute"><execute>gajim</execute></action>
  </item>
  <item label="Music Player">
    <action name="Execute"><execute>banshee</execute></action>
  </item>
  <item label="BitTorrent Client">
    <action name="Execute"><execute>qbittorrent</execute></action>
  </item>
  <menu id="encoding" label="Video Encoding">
    <item label="Broadcaster">
      <action name="Execute"><execute>obs</execute></action>
    </item>
    <item label="Decrypter">
      <action name="Execute"><execute>makemkv</execute></action>
    </item>
    <item label="Demuxer">
      <action name="Execute"><execute>tsMuxerGUI</execute></action>
    </item>
    <item label="Encoder">
      <action name="Execute"><execute>ghb</execute></action>
    </item>
    <item label="Muxer">
      <action name="Execute"><execute>mkvtoolnix-gui</execute></action>
    </item>
  </menu>
  <menu id="games" label="Games">
    <item label="Discord">
      <action name="Execute"><execute>discord-canary</execute></action>
    </item>
    <item label="Steam">
      <action name="Execute"><execute>steam</execute></action>
    </item>
  </menu>
  <item label="Password Manager">
    <action name="Execute"><execute>keepassx</execute></action>
  </item>

  <separator label="Openbox" />
  <menu id="client-list-menu" />
  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <item label="Exit">
    <action name="Exit" />
  </item>

  <separator label="System" />
  <item label="Reboot">
    <action name="Execute"><execute>reboot</execute></action>
  </item>
  <item label="Shutdown">
    <action name="Execute"><execute>shutdown -h now</execute></action>
  </item>
</menu>

</openbox_menu>
